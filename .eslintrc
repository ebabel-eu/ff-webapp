// Configuration: http://eslint.org/docs/user-guide/configuring
{
  "env": {
    "browser": true,
    "es6": true,
    "jquery": true,
    "mocha": true,
    "commonjs": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "jsx": true
    },
    "sourceType": "module"
  },
  "settings": {
    "react": {
      "pragma": "React",
      "version": "0.14.7"
    }
  },
  "plugins": [
    "react"
  ],
  "extends": [
    "airbnb",
    "plugin:react/recommended"
  ]
}